rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Função auxiliar para verificar se é admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'jhessymary26@gmail.com';
    }

    match /settings/votacao {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /backups_votos/{backupId} {
      allow read, write, delete: if isAdmin();
    }
    
    match /backups_fotos/{backupId} {
      allow read, write, delete: if isAdmin();
    }

    match /fotos_natal/{fotoId} {
      allow read: if true;

      // Admin pode criar sem restrições, usuários normais têm validações
      allow create: if isAdmin() 
        || (request.auth != null
        && request.resource.data.andar is int
        && request.resource.data.apartamento is string
        && request.resource.data.urlFoto is string
        && request.resource.data.votos == 0);

      // Apenas admin pode deletar
      allow delete: if isAdmin();
      
      // Admin pode atualizar tudo, usuários normais só podem votar
      allow update: if isAdmin()
        || (request.auth != null
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(['votos'])
        && request.resource.data.votos == resource.data.votos + 1
        && request.time >= get(/databases/$(database)/documents/settings/votacao).data.inicio
        && request.time <= get(/databases/$(database)/documents/settings/votacao).data.fim
        && existsAfter(/databases/$(database)/documents/fotos_natal/$(fotoId)/voters/$(request.auth.uid)));

      match /voters/{uid} {
        // Admin pode ler todos os voters, usuários normais só seus próprios
        allow read: if isAdmin() || (request.auth != null && request.auth.uid == uid);
        // Admin pode criar voters sem restrições, usuários normais têm validações de período
        allow create: if isAdmin()
          || (request.auth != null && request.auth.uid == uid
          && !exists(/databases/$(database)/documents/fotos_natal/$(fotoId)/voters/$(uid))
          && request.time >= get(/databases/$(database)/documents/settings/votacao).data.inicio
          && request.time <= get(/databases/$(database)/documents/settings/votacao).data.fim);
        // Apenas admin pode deletar voters
        allow delete: if isAdmin();
      }
    }
  }
}
